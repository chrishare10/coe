{% extends 'partials/_layout' %}
{% block content %}

   
    <div class="">
        <div clas="container mx-auto px-4 ">
            <div class="flex flex-col md:flex-row justify-around items-center py-40">
                <div class="text-center w-full md:w-2/3">
                    {{ entry.textArea01 | retcon([
                        ['change', 'h1','h2'],
                    ['attr', 'h2', { class: 'font-header lowercase text-3xl md:text-4xl xl:text-5xl text-navy mb-5' }],
                    ['attr', 'h3', { class: 'font-header lowercase text-2xl md:text-3xl xl:text-4xl text-navy mb-5' }],
                    ['attr', 'h4', { class: 'font-header lowercase text-xl md:text-2xl xl:text-3xl text-navy mb-5' }],
                    ['attr', 'h5', { class: 'font-header lowercase text-xl xl:text-2xl text-navy mb-5' }],
                    ['attr', 'p', { class: 'font-sans text-base text-navy mb-3' }],
                    ['attr', 'blockquote', { class: 'font-sans text-xl text-navy mb-10' }],
                    ['attr', 'ul', { class: 'list-disc mb-7' }],
                    ['attr', 'li', { class: ' ml-10' }],
                    ['attr', 'strong', { class: 'font-bold' }],
                    ['attr', 'a', { class: 'inline-block btn-navy text-base font-sans capitalize' }],

                    ]) }}
                </div>
            </div>
        </div>
    </div>
    

{% endblock %}